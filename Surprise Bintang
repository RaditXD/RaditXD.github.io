    <button class="tombol-musik" onclick="toggleMusik()">üéµ NYALAKAN MUSIK!</button>

    <!-- EFEK AKHIR -->
    <div class="efek-akhir" id="efekAkhir"></div>

    <script>
        // NAVIGASI SLIDE
        let slideSekarang = 1;
        const totalSlide = 5;

        function showSlide(n) {
            document.querySelectorAll('.slide').forEach(s => s.classList.remove('active'));
            document.getElementById(`slide${n}`).classList.add('active');
            slideSekarang = n;
        }

        function nextSlide() {
            slideSekarang = slideSekarang === totalSlide ? 1 : slideSekarang + 1;
            showSlide(slideSekarang);
        }

        function prevSlide() {
            slideSekarang = slideSekarang === 1 ? totalSlide : slideSekarang - 1;
            showSlide(slideSekarang);
        }

        // MUSIK
        function toggleMusik() {
            const musik = document.getElementById('musik');
            if (musik.paused) {
                musik.play();
                event.target.textContent = "üîä MUSIK NYALA!";
            } else {
                musik.pause();
                event.target.textContent = "üéµ NYALAKAN MUSIK!";
            }
        }

        // HIASAN LANGIT
        function buatHiasanLangit() {
            const hiasan = document.getElementById('hiasanLangit');
            const emoji = ['‚ú®', 'üåü', 'üí´', '‚ö°', 'üíô'];
            setInterval(() => {
                const bintang = document.createElement('div');
                bintang.classList.add('bintang');
                bintang.textContent = emoji[Math.floor(Math.random() * emoji.length)];
                bintang.style.left = `${Math.random() * 100}%`;
                bintang.style.animationDuration = `${10 + Math.random() * 15}s`;
                hiasan.appendChild(bintang);
                setTimeout(() => bintang.remove(), 25000);
            }, 300);
        }

        // EFEK AKHIR
        function tampilkanEfekAkhir() {
            const efek = document.getElementById('efekAkhir');
            efek.style.display = 'block';
            const emoji = ['‚ú®', 'üåü', 'üí´', 'üíô', '‚ö°'];
            for (let i = 0; i < 150; i++) {
                const item = document.createElement('div');
                item.classList.add('efek-item');
                item.textContent = emoji[Math.floor(Math.random() * emoji.length)];
                item.style.left = `${Math.random() * 100}%`;
                item.style.animationDuration = `${5 + Math.random() * 10}s`;
                efek.appendChild(item);
            }
        }

        // JALANKAN SEMUA
        window.onload = function() {
            buatHiasanLangit();
        };
    </script>
